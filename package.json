{
  "name": "order-management-system",
  "version": "1.0.0",
  "description": "Order Management System (OMS) backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "migrate:dev": "ts-node src/scripts/migrate.ts",
    "clear:data": "ts-node src/scripts/clear-data.ts"
  },
  "keywords": [
    "oms",
    "express",
    "typescript",
    "postgres"
  ],
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.3",
    "kysely": "^0.28.10",
    "node-cron": "^4.2.1",
    "pg": "^8.17.2",
    "razorpay": "^2.9.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.16.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  }
}
